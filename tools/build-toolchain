	emake \
		CC="$CC" \
		CXX="$CXX" \
		CFLAGS="-I$depsdir/include" \
		CXXFLAGS="-I$depsdir/include" \
		LDFLAGS="-L$depsdir/lib" \
		PREFIX="$depsdir" \
		LIBDIR="$depsdir/lib"
	emake install \
		CC="$CC" \
		CXX="$CXX" \
		CFLAGS="-I$depsdir/include" \
		CXXFLAGS="-I$depsdir/include" \
		LDFLAGS="-L$depsdir/lib" \
		PREFIX="$depsdir" \
		LIBDIR="$depsdir/lib"
}

