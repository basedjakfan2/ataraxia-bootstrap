	epatch libxml2/0002-use-customizable-path-to-etc-xml-catalog.patch

	sed -e "s|sysconfdir|$tools/etc|" -i \
		catalog.c \
		xmllint.c

	econfigure \
		--with-python=python3 \
		--disable-shared
	emake
	emake install
}

