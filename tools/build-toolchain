	cd "$sources/perl-$perl_version"
	BUILD_BZIP=0 \
	BUILD_ZLIB=False \
	./Configure -des \
		-Dprefix="$tools" \
		-Dvendorprefix="$tools" \
		-Dcc="$HOSTCC" \
		-Dccflags="-I$depsdir/include" \
		-Dldflags="-L$depsdir/lib -lm" \
		-Duseshrplib \
		-Dusethreads
	emake
	emake install
}

